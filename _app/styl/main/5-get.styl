#prices
	padding 90px 0
	background-color: #F5F5F5
	background-image: url(../img/backs/prices.jpg)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	background-attachment fixed
	overflow hidden
	position relative
	&:before
		content: ''
		display block
		position absolute
		width 100%
		height: 100%
		top 0
		left 0
		background-color: rgba(#F5F5F5, .8)
.facultatives-table-wrapper
	border-radius: 7px
	padding 5px
	background-color rgba(#fff,.85)
	width 100%
	max-width 820px
	margin 0 auto
	// box-shadow: 0px 1px 35px 0px rgba(158, 126, 192, 0.4);
	box-shadow: 0px 1px 44.16px 1.84px rgba(0, 0, 0, 0.3);
.facultatives-table
	border-radius: 7px
	border: 1px solid #d694c9
	&-col
		display: block
		&:first-of-type
			width 65%
			float left
			padding-right: 40px
		&:last-of-type
			width 35%
			float: right
	&-title
		font-size: 26px
		font-family: GP
		font-weight: bold
		text-transform uppercase
		color #d694c9
		small
			display block
			font-size: 16px
			font-family: G
			font-weight: normal
			color #000
			text-transform none
	&-cost
		font-size: 22px
		// font-weight: bold
		margin-bottom: 30px
		line-height: 1.2
		text-align center
		span
			font-size: 42px
			font-weight: 900
			text-transform uppercase
			display block
			color #d694c9
			// font-size: 36px
			&.full
				margin: 10px 0 5px
				color #000
				text-decoration line-through
				&.unbroken
					margin-bottom: 20px
					text-decoration none
			&.sale
				color red
.facultatives-table-row
	display block
	width 100%
	overflow hidden
	padding 30px 35px
	// border-radius: 7px
	&:nth-of-type(2n + 1)
		// border: 1px solid #d694c9
		// background-color: rgba(#8a3634,.4);
		background-color: rgba(#fff,.4);
	&:nth-of-type(2n)
		background-color: rgba(#F5F5F5, .45)
		// .facultatives-table-cost
		// .more-button
		// 	color #8a3634
.more-button
	cursor pointer
	font-size: 20px
	display: inline-block
	font-weight: bold
	border-bottom: 1px solid
	margin-top: 20px
	transition: all .3s ease
	&:focus
		color #000
		text-decoration none
	&:hover
		border-bottom: 0
		color: #000