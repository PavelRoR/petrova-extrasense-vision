#main
	padding 0 0 300px
	background url(../img/backs/main.png) no-repeat bottom center
	background-size: cover
	color #fff
.main
	&-title
		position relative
		font-family: G
		font-weight: bold
		font-size: 90px
		line-height: 1
		padding-left: 40px
		&:before
			content: ''
			display block
			position absolute
			height 100%
			width 10px
			background linear-gradient(180deg, #F83245 0%, #F6623B 100%);
			top 0
			left 0
	&-subtitle
		font-size: 36px
		margin 55px 0
		width 100%
		max-width 700px
	&-date
		position absolute
		top 50%
		right 0
		&-time
			position relative
			margin-top: 20px
			&:before
				content: ''
				display block
				position absolute
				width 1000px
				height: 60px
				top -5px
				left -15px
				background: #F83245
			p
				position relative
				z-index 20
				font-size: 36px
	&-author
		position relative
		&:before
			content: ''
			display block
			position absolute
			width 270px
			height: 2px
			background-color: #F83245;
			top -20px
			left -110px
		&-text
			font-size: 30px
			span
				display inline-block
				color #F6623B