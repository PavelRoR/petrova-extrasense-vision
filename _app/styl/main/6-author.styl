#author
	padding 90px 0
	background: linear-gradient(187.01deg, rgba(40, 9, 9, 0) 20%, #0E0202 60.71%);
	z-index 20
	@media screen and (max-width 650px)
		padding 60px 0
	@media screen and (max-width 485px)
		padding 40px 0
.general-img-author
	top -180px
	right -50px
	@media screen and (max-width 991px)
		width 300px
		top -150px
	@media screen and (max-width 650px)
		top -50px
	@media screen and (max-width 485px)
		right -100px
	@media screen and (max-width 386px)
		width 250px
		top -40px
.author
	&-content
		display flex
		flex-direction: row
		flex-wrap: nowrap
		align-items: flex-start
		justify-content: space-between
		@media screen and (max-width 991px)
			flex-direction: column
	&-img
		display block
		width 560px
		@media screen and (max-width 991px)
			width 100%
			max-width 560px
	&-info
		margin-left: -100px
		@media screen and (max-width 991px)
			margin-left: 0
	&-pretitle
		font-size: 20px
		font-weight: bold
		text-transform uppercase
		position relative
		color #fff
		padding 0 0 6px
		margin 0 0 10px
		@media screen and (max-width 485px)
			font-size: 18px
		&:before
			content: ''
			display block
			position absolute
			left 0
			bottom: 0
			width 1000px
			height: 3px
			background: #F83245
	&-list
		li
			list-style: none
			color #fff
			padding-left: 30px
			font-size: 20px
			margin-bottom: 30px
			position relative
			background: url(../img/icons/check.png) no-repeat left top 5px
			&:nth-child(2)
				margin-left: 20px
			&:nth-child(3)
				margin-left: 40px
			&:nth-child(4)
				margin-left: 60px
			&:nth-child(5)
				margin-left: 80px
			&:nth-child(6)
				margin-left: 100px
			&:nth-child(7)
				margin-left: 110px
			&:nth-child(8)
				margin-left: 100px
			&:nth-child(9)
				margin-left: 95px
			@media screen and (max-width 991px)
				margin-left: 0 !important