.revs-slider.slick-dotted.slick-slider
.revs-slider-text.slick-dotted.slick-slider
	width 100%
	// max-width 1340px
	margin 0 auto
	position relative
	z-index 50
	.slick-track
		padding-bottom: 20px
	.slick-center
		transform scale(1.08)
	.slick-arrow
		height 46px
		width 100px
		top 45%
		// bottom: -90px
	.slick-prev
		&:before
			content: ''
			display block
		width 35px
		height: 64px
		background-image: url(../img/icons/arrows.png)
		background-repeat: no-repeat
		background-position: center left
		background-size cover
	.slick-next
		&:before
			content: ''
			display block
		width 35px
		height: 64px
		background-image: url(../img/icons/arrows.png)
		background-repeat: no-repeat
		background-position: center right
		background-size cover
	.slick-prev
	.slick-next
		&:before
			width 100%
			height 100%
			border-radius: 0
			display block
			line-height: 46px
			background-color: transparent;
			text-align center
			color #F83245
			font-size: 60px
			opacity 1
			transition: all .3s ease
			// border: 1px solid #F83245;;
			font-weight: normal
		&:hover
			&:before
				background-color: transparent
				color #F83245;
		left -2%
