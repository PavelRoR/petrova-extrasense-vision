.revs-slider-text.slick-dotted.slick-slider
	margin: 90px 0 0
	@media screen and (max-width 991px)
		margin: 50px 0 0
.slick-dots
	left 0
	text-align center
	bottom: -30px
	right 0
	margin 0 auto
	display: flex !important;
	align-items: center;
	justify-content: center;
	width: 100%;
	max-width: 300px;
	li
		display inline-block
		width 10px
		height 10px
		border-radius: 50px
		border: 0
		transition: all .3s ease
		margin 0 5px
		overflow hidden
		background-color:  #D9D9D9
		@media screen and (max-width 386px)
			width 8px
			height: 8px
		button
			transition: all .3s ease
			width 100%
			height 100%
			background-color: transparent
			padding 0
			&:before
				content: none
		&.slick-active
			margin: 0 5px
			transform: scale(1.1)
			width 16px
			height: 16px
			button
				background-color: #F83245;
.text-rev-img
	position relative
	// z-index 30
	width 100%
	max-width 560px
	display block
	margin 0 auto
	background: #F7E1DC;
	object-fit: contain
	object-position: center
	height 350px
	border-radius: 5px
	@media screen and (max-width 991px)
		height 200px
	@media screen and (max-width 768px)
		height 300px
	@media screen and (max-width 386px)
		height: 200px
.text-rev-link
	padding 20px
.video-revs-arrows-1
.video-revs-arrows-2
	position absolute
	width 110px
	top 100px
	left 0
	right 0
	margin 0 auto
	z-index 100
	@media screen and (max-width 560px)
		top 90px
	@media screen and (max-width 386px)
		top 80px
.slick-next, .slick-prev
	width 160px
	height 60px
.slick-next:before
.slick-prev:before
	color: #F83245;
	font-size: 60px
	font-weight: normal
	transition: all .3s ease
	opacity 1
.slick-next:hover:before
.slick-prev:hover:before
	color: #F83245 + 20%
.slick-slide
.slick-center
	transition: all .3s ease