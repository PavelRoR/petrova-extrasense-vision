#plan
	padding 90px 0
	position relative
	@media screen and (max-width 650px)
		padding 60px 0
	@media screen and (max-width 485px)
		padding 40px 0
.general-img-plan-1
	width 	1920px
	display block
	margin 0 auto
	left calc(50% - 960px)
	right 0
	top -150px
	@media screen and (max-width 991px)
		width 1600px
		top -60px
		left calc(50% - 700px)
	@media screen and (max-width 650px)
		top -150px
	@media screen and (max-width 386px)
		left calc(50% - 600px)
		top -100px
.general-img-plan-2
	top -400px
	right -300px
	@media screen and (max-width 991px)
		width 500px
		right -250px
	@media screen and (max-width 650px)
		width 350px
		top -300px
	@media screen and (max-width 485px)
		top -250px
.bonus
	margin 50px 0 70px
	display flex
	align-items: flex-start
	justify-content: space-between
	flex-direction: row
	flex-wrap: nowrap
	@media screen and (max-width 991px)
		flex-direction: column
	@media screen and (max-width 650px)
		margin 35px 0 50px
	&-title
		font-family: G
		font-size: 46px
		font-weight: bold
		color #F83245
		line-height: 1
		@media screen and (max-width 485px)
			font-size: 40px
	&-text
		color #fff
		padding-left: 45px
		position relative
		margin-left: 45px
		border-left: 20px solid #F6623B;
		font-size: 20px
		position relative
		@media screen and (max-width 485px)
			font-size: 18px
		&:before
			content: ''
			display block
			position absolute
			width 500px
			height: 2px
			background-color: #F83245
			left -516px
			bottom: 30px
			@media screen and (max-width 650px)
				left: -510px
			@media screen and (max-width 386px)
				left -505px
		@media screen and (max-width 991px)
			margin-left: 0
			margin-top: 20px
			padding-left: 20px
			border-left: 16px solid #F6623B;
		@media screen and (max-width 650px)
			border-left: 10px solid #F6623B;
			padding-left: 16px
		@media screen and (max-width 386px)
			border-left: 5px solid #F6623B;
		span
			font-weight: bold
			text-transform uppercase