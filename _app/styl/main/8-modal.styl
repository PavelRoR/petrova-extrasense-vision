.white-popup
	position: relative;
	background: #ffff
	border-radius 5px
	padding: 40px;
	width: 100%;
	max-width: 950px;
	margin: 20px auto;
	overflow hidden
	@media screen and (max-width 560px)
		padding 30px 20px 20px
	@media screen and (max-width 385px)
		padding 30px 15px 15px
.mfp-close
	top 10px
	right 10px
	&:active
		top 10px
.mfp-fade.mfp-bg
	opacity: 0;
	transition: all 0.5s ease-out;
/* overlay animate in */
.mfp-fade.mfp-bg.mfp-ready
	opacity: 0.8;
/* overlay animate out */
.mfp-fade.mfp-bg.mfp-removing
	opacity: 0;
/* content at start */
.mfp-fade.mfp-wrap .mfp-content
	opacity: 0;
	transition: all 0.5s ease-out;
/* content animate it */
.mfp-fade.mfp-wrap.mfp-ready .mfp-content
	opacity: 1;
/* content animate out */
.mfp-fade.mfp-wrap.mfp-removing .mfp-content
	opacity: 0;
.modal-title
	font-size: 26px
	font-weight: 900
	text-transform uppercase
	small
		display block
		font-size: 16px
		font-weight: normal
		text-transform: none
.modal-subtitle
	font-size: 22px
	font-weight: bold
	margin: 30px 0 20px
.modal-text
	margin: 20px 0
	font-size: 20px
	span
		font-weight: bold
.modal-cost
	margin-top: 25px