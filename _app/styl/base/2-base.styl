*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: CG
	color #000
	background-color #fff
	line-height: 1.5
.wrapper
	overflow: hidden;
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
.content
	position relative
	z-index 60
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display block
	text-align center
	text-decoration none
	color: #fff
	width: 100%
	max-width 390px
	padding: 35px 20px;
	font-size: 20px
	background-color: #F83245
	background-image: linear-gradient(180deg, #F83245 0%, #F6623B 100%);
	border-radius: 5px;
	transition: all .3s ease;
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #fff
		transform: translateY(3px)
		background-color #F6623B
		background-image: linear-gradient(0deg, #F83245 0%, #F6623B 100%);
.general-title
	font-size: 35px
	font-family: G
	font-weight: bold
	margin-bottom: 50px
	color #F83245
.general-list
	li
		list-style: none
		padding-left: 50px
		margin-bottom: 20px
		padding-bottom: 20px
		position relative
		border-bottom: 3px solid rgba(248, 50, 69, 0.41)
		background-image: url(../img/icons/rect.png)
		background-position: top 3px left
		background-repeat: no-repeat
		&:last-child
			margin-bottom: 0
			border-bottom: 0
	&&-2
		li
			list-style: none
			padding-left: 20px
			margin-bottom: 15px
			position relative
			&:before
				content: none
			&:after
				width 8px
				height: 8px
				top 10px
				left 0
.general-list
	.general-sublist
		margin-top: 10px
		li
			&:after
				width 10px
				height: 4px
				top 13px
.general-text
	margin-bottom: 20px