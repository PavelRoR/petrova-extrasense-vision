*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: CG
	color #000
	background-color #fff
	line-height: 1.5
.container
	width 100%
	max-width 1200px
.wrapper
	overflow: hidden;
	position relative
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
.content
	position relative
	z-index 60
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 5px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display block
	text-align center
	text-decoration none
	color: #fff
	width: 100%
	max-width 390px
	padding: 25px 20px;
	font-size: 20px
	background-color: #F83245
	background-image: linear-gradient(180deg, #F83245 0%, #F6623B 100%);
	border-radius: 5px;
	transition: all .3s ease;
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #fff
		transform: translateY(3px)
		background-color #F6623B
		background-image: linear-gradient(0deg, #F83245 0%, #F6623B 100%);
.general-title
	font-size: 40px
	font-family: G
	font-weight: bold
	margin-bottom: 50px
	color #F83245
	@media screen and (max-width 485px)
		font-size: 32px
		margin-bottom: 35px
.general-list
	li
		list-style: none
		padding-left: 50px
		margin-bottom: 20px
		padding-bottom: 20px
		position relative
		font-size: 20px
		border-bottom: 3px solid rgba(248, 50, 69, 0.41)
		background-image: url(../img/icons/rect.png)
		background-position: top 3px left
		background-repeat: no-repeat
		@media screen and (max-width 485px)
			padding-left: 20px
			margin-bottom: 10px
			padding-bottom: 10px
			font-size: 18px
			background-size: 10px
			background-position: top 7px left
		&:last-child
			margin-bottom: 0
			border-bottom: 0
.general-img
	position absolute
	z-index 0
.play-button
	width 160px
	height: 160px
	border-radius: 50%
	background-color #fff
	opacity .5
	position absolute
	left 0
	right 0
	margin 0 auto
	top calc(50% - 80px)
	cursor pointer
	transition: all .4s ease
	@media screen and (max-width 650px)
		width 80px
		height: 80px
		top calc(50% - 40px)
	&:after
		content: ''
		display block
		width 40px
		height: 40px
		position absolute
		margin 0 auto
		left 67px
		top calc(50% - 20px)
		border: 20px solid transparent
		border-left: 30px solid #000
		@media screen and (max-width 650px)
			width 20px
			height: 20px
			left 35px
			top calc(50% - 10px)
			border: 10px solid transparent
			border-left: 15px solid #000
	&:hover
		opacity 1
	&&-rev
		width 72px
		height: 72px
		top calc(50% - 36px)
		@media screen and (max-width 650px)
			width 50px
			height: 50px
			top calc(50% - 25px)
		&:after
			width 20px
			height: 20px
			border: 10px solid transparent
			border-left: 15px solid #000
			top 26px
			left 31px
			@media screen and (max-width 650px)
				top 16px
				left 21px