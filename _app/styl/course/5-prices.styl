#prices
	padding 90px 0
.packet
	width 100%
	max-width 560px
	margin 0 auto 30px
	background: #F7E1DC;
	border-radius: 5px;
	padding 40px 30px
	&-head
		&-title
			font-family: G
			font-size: 40px
			font-weight: bold
			text-align center
			color #F6623B
			line-height: 1.1
			small
				color #000
				display block
				font-family: CG
				font-weight: normal
				font-size: 16px
	&-body
		padding 20px 0
		min-height 370px
	&-footer
		text-align center
.cost
	font-size: 26px
	font-weight: bold
	margin-bottom: 20px
	span
		font-family: G
		font-size: 48px
		display block
	&-full
		span
			text-decoration: line-through
			&.unbroken
				text-decoration none
	&-sale
		color red
.button-cost
	display inline-block
.prepayment
	text-align center
	margin-bottom: 35px
	color #fff
	&-text
		font-size: 26px
		margin 20px 0 30px
		span
			font-weight: bold
			display inline-block
.timer-title
	text-align center
	font-family: G
	font-size: 48px
	font-weight: bold
	color #fff
	margin-top: 35px
	@media screen and (max-width 560px)
		font-size: 26px
		line-height: 1.2
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 30px
.flip-clock-divider .flip-clock-label
	color #fff
.flip-clock-dot
	background-color: #f83245
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #f83245
	text-shadow: none
@media screen and (max-width 560px)
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px