#plan
	padding 90px 0
	position relative
	@media screen and (max-width 650px)
		padding 60px 0
	@media screen and (max-width 485px)
		padding 40px 0
.general-img-plan-1
	width 	1920px
	display block
	margin 0 auto
	left calc(50% - 960px)
	right 0
	top -150px
	@media screen and (max-width 991px)
		width 1600px
		top -60px
		left calc(50% - 700px)
	@media screen and (max-width 650px)
		top -150px
	@media screen and (max-width 386px)
		left calc(50% - 600px)
		top -100px
.general-img-plan-2
	top -400px
	right -300px
	@media screen and (max-width 991px)
		width 500px
		right -250px
	@media screen and (max-width 650px)
		width 350px
		top -300px
	@media screen and (max-width 485px)
		top -250px
.full-plan-sider
	margin-bottom: 60px
	position relative
	padding 70px 2px 0
	top 0
	left 0
	width 100%
	height 100%
	@media screen and (max-width 650px)
		padding 40px 0 0
	@media screen and (max-width 386px)
		padding 25px 0 0
.lesson .general-list
	width 100%
	max-width 1170px
	// margin 0 auto
.slick-dotted.full-plan-sider
	margin-bottom: 100px
.full-plan-slider-title
	font-size: 36px
	font-weight: bold
	color #F6623B
	opacity 0
	padding 0
	width auto
	height auto
	opacity .1
	cursor pointer
	transition: all .3s ease
	position relative
	z-index 60
	@media screen and (max-width 650px)
		font-size: 26px
	@media screen and (max-width 485px)
		font-size: 22px
	&:hover
		opacity .5
	&.slick-slide
		opacity .1
	&.slick-current
		opacity 1
		&+.full-plan-slider-title
			opacity .5
			&+.full-plan-slider-title
				opacity .25
				&:hover
					opacity .5
	&s
		left 90px
		width 100%
		max-width 1360px
		margin 0 auto
		.slick-list
			overflow visible
		@media screen and (max-width 1300px)
			left 3%
		@media screen and (max-width 1199px)
			left 2%
		@media screen and (max-width 991px)
			width 130%
		@media screen and (max-width 386px)
			left 4%
.module-title
	font-size: 24px
	font-weight: bold
	padding-left: 20px
	border-left: 10px solid #F6623B;
	@media screen and (max-width 650px)
		font-size: 20px
		padding-left: 10px
		border-left: 5px solid #F6623B;
.lesson-number
	font-size: 22px
	margin 50px 0 35px
	font-weight: bold
	@media screen and (max-width 650px)
		margin 35px 0 20px
		font-size: 18px